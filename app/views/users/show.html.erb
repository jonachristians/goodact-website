
<div class="container">
  <div class="jumbotron">
    <div class="row">
      <div class="col-md-6">
        <div class="thumbnail">
          <%= image_tag @user.image %>
        </div>
      </div>
      <div class="col-md-6">
        <h2><%= @user.first_name%> <%= @user.last_name %></h2>
        <% if herself? %>
          <p class="user-edit">
            <%= link_to "Edit profile", edit_user_path(@user), class: "btn btn-primary" %>
          </p>
          <p class="user-delete">
            <%= link_to "Delete profile", user_path(@user), method: 'delete', data: {confirm: 'Are you sure?'}, class: "btn btn-danger" %>
          </p>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h2>Offers</h2>
      <div class="row">
        <%= render @user.offers %>
      </div>
    </div>
    <div class="col-md-6">
      <h2>Searches</h2>
      <div class="row">
        <%= render @user.searches %>
      </div>
    </div>
  </div>
</div>
